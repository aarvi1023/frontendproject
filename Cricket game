<body>
    <h1>Bat Ball Stump Game</h1>
    <button class="button" onclick="
    computerchoice = generatesComputerChoice();
    console.log('you have chosen bat');
    resultMsg = result('Bat',computerchoice);
    console.log(`computer chioce is ${computerchoice}`);
    showResult('Bat',computerchoice,resultMsg);
    ">Bat</button>

    <button class="button" onclick="
    computerchoice = generatesComputerChoice();
    console.log('you have chosen ball');
    resultMsg = result('Ball',computerchoice);
    console.log(`computer chioce is ${computerchoice}`);
    showResult('Ball',computerchoice,resultMsg);
    ">Ball</button>

    <button class="button" onclick="
    computerchoice = generatesComputerChoice();
    console.log('you have chosen stump');
    resultMsg = result('Stump',computerchoice);
    console.log(`computer chioce is ${computerchoice}`);
    showResult('Stump',computerchoice,resultMsg);
    ">Stump</button>
    <script>
        let score = {
            win : 0,
            lose:0,
            tie:0
        };
        
        function generatesComputerChoice(){
            let randomNumber = Math.random() * 3 ;
            
            if (randomNumber>0 && randomNumber<=1){
              return 'Bat';
        // console.log('computer choice is Bat');
    }
            else if (randomNumber>1 && randomNumber<=2){
              return 'Ball';
        // console.log('computer choice is Ball');
    }
            else {
              return 'Stump';
        // console.log('computer choice is Stump');
    }
        }

        function result(userMove,computerMove){
           if (userMove==='Bat'){
            if (computerMove==='Bat'){
                score.tie ++ ;
                return 'Match tied';
            }
            else if (computerMove==='Ball'){
                score.win ++ ;
                return ' user won';
            }
            else {
                score.lose ++;
                return 'computer won';
            }
           }
           else if (userMove==='Ball'){
            if (computerMove==='Bat'){
                score.lose ++ ;
                return 'computer won';
            }
            else if (computerMove==='Ball'){
                score.tie ++;
                return ' Match tied';
            }
            else {
                score.tie ++ ;
                return 'user won';
            }}

           else if (userMove==='Stump'){
            if (computerMove==='Bat'){
                score.win ++ ;
                return 'user won';
            }
            else if (computerMove==='Ball'){
                score.lose ++;
                return ' computer won';
            }
            else {
                score.tie ++ ;
                return 'Match tied';
            }}
           }
        
        function showResult(userMove,computerMove,resultMsg){
            // console.log(score);
            alert(`Your have chosen ${userMove} and Computer choice is ${computerMove} and result is ${resultMsg} 
             won:${score.win},lose:${score.lose},tied:${score.tie}`)
        }
    </script>
</body>


</html>
