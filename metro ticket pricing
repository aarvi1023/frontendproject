    <script>
        let age=96;
        let gender='female';
        if (age<5){
            console.log('your ticket is free');
        }
        else if (age<=8 && age>5){
            console.log('pay half of ticket price');
        }
        else if((age>8 && age <=65) && (gender === 'male')){
            console.log('pay the ticket price');
        }
        else if ((age>65)&&(gender==='male')){
            console.log('you have got 70% discount');  
        }
        else if ((age>65)&&(gender==='female')){
            console.log('you have got 70% discount');  
        }
        else if (gender==='female'){
            console.log('you have got 50% discount');
        }
        else{
            console.log('no discount');
        }

    </script>
